{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-debug",
      "displayName": "Ninja Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "vs2022-x64",
      "displayName": "Visual Studio 2022 x64",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/vs2022",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "vs-latest-x64",
      "displayName": "Visual Studio Latest x64",
      "inherits": "vs2022-x64",
      "binaryDir": "${sourceDir}/build/vs-latest"
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "vs2022-debug",
      "configurePreset": "vs2022-x64",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-release",
      "configurePreset": "vs2022-x64",
      "configuration": "Release"
    },
    {
      "name": "vs-latest-debug",
      "configurePreset": "vs-latest-x64",
      "configuration": "Debug"
    },
    {
      "name": "vs-latest-release",
      "configurePreset": "vs-latest-x64",
      "configuration": "Release"
    }
  ]
}
